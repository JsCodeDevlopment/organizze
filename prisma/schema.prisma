datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  notes     Note[]
}

model Note {
  id        String   @id @default(cuid())
  date      DateTime
  time      String
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
}

